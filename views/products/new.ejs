<% layout('layouts/boilerplate') -%>

  <!-- creating form to add new product  -->

  <div class="row ">
    <div class="col-md-6 mx-auto">
      <form action="/products" class="needs-validation" method="POST" novalidate>

        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">Product name</label>
          <input type="text" class="form-control" id="name" placeholder="name" name="name" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">Image-URL</label>
          <input type="text" class="form-control" id="img" placeholder="Product image url" name="img" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>

        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">$</span>
            <input type="number" name="price" class="form-control" placeholder="price" aria-label="Username"
              aria-describedby="basic-addon1" required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label for="desc" class="form-control">Description</label>
          <textarea class="form-control" id="desc" name="desc" rows="5" required></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <button type="submit" class="btn btn-sm btn-success">Add</button>

      </form>

    </div>

  </div>